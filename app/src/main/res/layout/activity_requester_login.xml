<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequesterLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/welcome_login"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="RoWeb"
                android:textSize="50dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                />


            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/welcome_login"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/email"
                android:ems="10"
                android:hint="E mail...."
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorPrimaryDark"
                android:padding="4dp"
                />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_email"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/password"
                android:textColorHint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Password...."
                android:inputType="textPassword"
                android:padding="4dp" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_password"
                android:layout_marginTop="12dp"
                android:background="@drawable/button"
                android:padding="8dp"
                android:text="Login"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/register_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/login_button"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="15dp"
                android:text="Don't have an account , Need new account...?"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_account_link"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Forget Password...?"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:textSize="20sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/forget_password_link"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_below="@+id/forget_password_link"
                    android:layout_marginTop="30dp"
                    android:text="or login with"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textAlignment="viewEnd"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/google_signin_button"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/google" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>