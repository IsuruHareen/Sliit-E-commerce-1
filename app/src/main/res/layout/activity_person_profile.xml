<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PersonProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include
                android:id="@+id/other_profile_toolbar"
                layout="@layout/app_bar_layout" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/other_profile_toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_pic"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/person_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile name Of The Person Or Company"
                android:layout_below="@+id/text1"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_full_name"
                android:layout_marginTop="10dp"
                android:text="Your username:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/person_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@+id/text2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                android:background="@drawable/inputs"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_username"
                android:layout_marginTop="10dp"
                android:text="Person's or stall's status:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status is here."
                android:layout_below="@+id/text3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="6dp"
                />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_status"
                android:layout_marginTop="10dp"
                android:text="Country:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/person_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@+id/text4"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_country"
                android:layout_marginTop="10dp"
                android:text="Shopping hours:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/person_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ex:7.00am-8.00pm"
                android:layout_below="@+id/text5"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_dob"
                android:layout_marginTop="10dp"
                android:text="Person's account type:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />



            <TextView
                android:id="@+id/person_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ex: customer, Industry Or e-commercial"
                android:layout_below="@+id/text6"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_gender"
                android:layout_marginTop="10dp"
                android:text="All contacts:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/person_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:layout_below="@+id/text7"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:linksClickable="true"
                android:autoLink="all"
                android:textColorLink="#bcb535"
                android:textStyle="normal"
                android:background="@drawable/inputs"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_relationship_status"
                android:layout_marginTop="10dp"
                android:text="See the posts that uploaded:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <Button
                android:id="@+id/person_post_button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/text8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Posts"
                android:background="@drawable/inputs"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/text06"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/person_post_button"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>