<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/my_profile_toolbar"
                layout="@layout/app_bar_layout" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_pic"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile"
                android:layout_below="@+id/my_profile_toolbar"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_profile_pic"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/my_profile_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Of Your Or Your Company"
                android:layout_below="@+id/text1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_profile_full_name"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/my_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@+id/text2"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                />


            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_username"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/my_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status About You Or Your Company"
                android:layout_below="@+id/text3"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="normal"
                android:background="@drawable/inputs2"
                android:padding="6dp"
                />



            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_profile_status"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/my_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@+id/text4"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                />


            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_country"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/my_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sopping hours ex:7.00am-8.00pm"
                android:layout_below="@+id/text5"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                />


            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_dob"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />


            <TextView
                android:id="@+id/my_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type ex: customer , Industry Or e-commercial"
                android:layout_below="@+id/text6"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="6dp"
                />


            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_gender"
                android:layout_marginTop="5dp"
                android:text="Profile name Of The Person Or Company:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <TextView
                android:id="@+id/my_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts numbers or links ex: Whatsapp Or facebook"
                android:layout_below="@+id/text7"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:autoLink="all"
                android:textColorLink="#bcb535"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:padding="6dp"
                />

            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_relationship_status"
                android:layout_marginTop="5dp"
                android:text="See posts that you uploaded:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <Button
                android:id="@+id/my_post_button"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/text8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Posts"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/text15"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/my_post_button"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>