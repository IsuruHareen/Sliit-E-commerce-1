<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PostActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/update_post_page_toolbar"
                layout="@layout/app_bar_layout" />

            <TextView
                android:id="@+id/image_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_post_page_toolbar"
                android:layout_marginTop="5dp"
                android:text="Recommend lower size of image. "
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <ImageButton
                android:id="@+id/select_post_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/image_size"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/select_image"
                android:background="@drawable/inputs2"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_post_image"
                android:layout_marginTop="5dp"
                android:text="Write Item Name shortly:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <EditText
                android:id="@+id/post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inputs2"
                android:ems="10"
                android:hint="Include here...."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_name"
                android:layout_marginTop="10dp"
                android:text="Write Small Description:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <EditText
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inputs2"
                android:ems="10"
                android:hint="Include here...."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_description"
                android:layout_marginTop="10dp"
                android:text="Include the all Contacts ex:- WhatsApp , messenger or E-mail:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <EditText
                android:id="@+id/post_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inputs2"
                android:ems="10"
                android:hint="Include here...."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_country"
                android:layout_marginTop="10dp"
                android:text="Include the key word of product's type as below carefully:"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="35dp"
                />

            <EditText
                android:id="@+id/post_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inputs2"
                android:ems="10"
                android:hint="Include here...."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textAllCaps="false"
                android:textSize="16sp"/>


            <Button
                android:id="@+id/topic_catalogue"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/post_link"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Products' Types and key codes Here"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/inputs"
                />

            <Button
                android:id="@+id/update_post_button"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_below="@+id/topic_catalogue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/button"
                android:text="Publish"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text14"
                android:layout_below="@+id/update_post_button"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>